<h1>Create Accessory</h1>
<div class="form">
    <form action="/createAccessory" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{accessory.name}}">
        <label for="name">Description</label>
        <textarea id="description" name="description" value="{{accessory.description}}"></textarea>
        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imageUrl" value="{{accessory.imageUrl}}">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="{{accessory.price}}">
        <input type="submit" value="Create">
    </form>
</div>