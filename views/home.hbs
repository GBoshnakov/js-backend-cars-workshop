<h1>Browser</h1>
<form action="/" method="GET">
  <input type="text" class="search" name="search" placeholder="Search by brand..." value="{{query.search}}">
  <input type="number" name="from" class="difficulty" placeholder="Price from..." value="{{query.from}}">
  <span>-</span>
  <input type="number" name="to" class="difficulty" placeholder="Price to..." value="{{query.to}}">
  <input type="submit" value="search">
</form>
<div id="cars-section">
  {{#each cars}}
  {{> carTemplate}}
  {{else}}
  <i>No cars in Database.</i>
  {{/each}}
</div>

<script src="/static/js/app.js"></script>